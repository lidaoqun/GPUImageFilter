<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#2e2d31"
    tools:context="com.lidaoqun.gpuimagefilter.FilterActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1">
           <jp.co.cyberagent.android.gpuimage.GPUImageView
               android:id="@+id/gpuimage"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </FrameLayout>

       <it.sephiroth.android.library.widget.HListView
           android:id="@+id/list_filter"
           android:layout_width="match_parent"
           android:background="#1d1b1e"
           android:layout_height="90dp"
           android:gravity="center_vertical"
           app:hlv_dividerWidth="8dp" />

       <RelativeLayout
           android:layout_width="match_parent"
           android:gravity="center_vertical"
           android:layout_height="45dp">
           <ImageView
               android:id="@+id/filter_close"
               android:onClick="ButtonClick"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:src = "@mipmap/lsq_style_default_camera_button_close" />

           <ImageView
               android:id="@+id/filter_completed"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="15dp"
               android:onClick="ButtonClick"
               android:src = "@mipmap/lsq_style_default_edit_button_completed" />

       </RelativeLayout>

   </LinearLayout>

